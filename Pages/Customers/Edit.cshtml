@page
@model CRUD.Pages.Customers.Edit
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-4">
        <h2 class="text-center mb-5">Edit Customer</h2>

        @if (Model.ErrorMessage.Length > 0) {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@Model.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>            
        }

        <form method="POST">
            <div class="row mb-3">
                <div class="col-sm-12">
                    <label class="col-form-label">Id</label>
                    <input readonly class="form-control-plaintext" type="text" asp-for="Id">
                </div>
            </div>

            <!-- First Name and Last Name in the same row -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="col-form-label">First Name*</label>
                    <input class="form-control" asp-for="Firstname">
                    @* Display validation error *@
                    <span asp-validation-for="Firstname" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label class="col-form-label">Last Name*</label>
                    <input class="form-control" asp-for="Lastname">
                    @* Display validation error *@
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
            </div>

            <!-- Email remains in its own row -->
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="col-sm-4 col-form-label">Email*</label>
                    <input class="form-control" asp-for="Email">
                    @* Display validation error *@
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label class="col-form-label">Phone</label>
                    <input class="form-control" asp-for="Phone">
                </div>
            </div>

            <!-- Phone and Address in the same row -->
            <div class="row mb-3">
                <div class="col-sm-12">
                    <label class="col-form-label">Address</label>
                    <input class="form-control" asp-for="Address">
                </div>
            </div>

            <!-- Company field -->
            <div class="row mb-3">
                <div class="col-sm-12">
                    <label class="col-sm-4 col-form-label">Company*</label>
                    <input class="form-control" asp-for="Company">
                    @* Display validation error *@
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>
            </div>

            <!-- Notes field -->
            <div class="row mb-3">
                <div class="col-sm-12">
                    <label class="col-sm-4 col-form-label">Notes</label>
                    <textarea class="form-control" asp-for="Notes"></textarea>
                </div>
            </div>

            <!-- Submit and Cancel buttons -->
            <div class="row text-center">
                <div class="col-sm-6 d-grid">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
                <div class="col-sm-6 d-grid">
                    <a class="btn btn-outline-primary" href="/Customers/Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>